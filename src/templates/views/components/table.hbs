<table style="border-collapse: collapse; width: 100%; border: 2px solid #ccc;">
    {{#if title}}
        <div style="background-color: #1f5fb9;color: white;font-size: 16px;font-weight: 600;border: 2px solid #ccc;border-bottom: none;border-radius: 12px 12px 0 0;padding: 10px;">{{ title }}</div>
    {{/if}}
    <thead>
        <tr style="background: #0069c7;color: white;">
            {{#each headers}}
                <th style="border: 2px solid #ccc; padding: 8px">{{this}}</th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
            <tr>
                {{#each this}}
                    <td style="border: 2px solid #ccc; padding: 8px;">{{this}}</td>
                {{/each}}
            </tr>
        {{/each}}
    </tbody>
</table>